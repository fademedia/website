---
import Div from "./framer/Div.astro";
import Span from "./framer/Span.astro";
import Lottie from "./shared/Lottie";
---

<section class="w-screen flex flex-wrap justify-center items-center" id="home">
  <Div>
    <div
      class="text-5xl sm:text-6xl lg:text-7xl xl:text-7xl font-semibold tracking-wide leading-relaxed h-screen -translate-y-5 flex justify-center items-center"
    >
      <Span
        classes="md:inline bg-gradient-to-t from-purple-200 via-purple-400 to-purple-800 text-transparent bg-clip-text tracking-wide sm:leading-loose text-center font-Pacifico"
      >
        digital visionaries.
      </Span>
    </div>
  </Div>
  <Div>
    <Lottie
      LottieSource={"https://lottie.host/2c63b9df-5ecb-46e1-a49b-167d1a174bdc/NewOJ2mug6.lottie"}
      loop={true}
      client:load
    />
  </Div>
</section>
